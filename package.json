{
  "name": "ops-portal-component-library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/copartit/ops-portal-component-library.git"
  },
  "version": "1.0.0",
  "main": "index.js",
  "description": "Ops-portal UI Component Library",
  "author": "Sidharth Mehra",
  "scripts": {
    "start": "webpack-dev-server",
    "test": "jest --silent",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "build:dev": "webpack",
    "build": "NODE_ENV=production BABEL_ENV=production webpack -p",
    "prepublish": "npm run build",
    "flow": "flow",
    "lint": "eslint src/**/*.js",
    "flowtype": "flow-typed install",
    "precommit": "lint-staged",
    "prettier": "prettier-eslint src/**/*.js --trailing-comma es5 --single-quote --eslint-config-path .eslintrc.js --no-semi --print-width 120 --write"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/copartit/ops-portal-component-library/issues"
  },
  "homepage": "https://github.com/copartit/ops-portal-component-library#readme",
  "dependencies": {
    "@uifabric/icons": "^5.3.0",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.7",
    "html-webpack-plugin": "^2.29.0",
    "material-design-icons": "^3.0.1",
    "material-icons": "^0.1.0",
    "material-ui": "0.15.4",
    "moment": "^2.19.2",
    "moment-timezone": "^0.5.14",
    "node-sass": "^4.7.2",
    "office-ui-fabric-react": "^5.30.2",
    "path": "^0.12.7",
    "prop-types": "^15.6.0",
    "ramda": "^0.25.0",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-tap-event-plugin": "2.0.1",
    "react-tooltip": "^3.4.0",
    "react-virtualized": "^9.14.1",
    "render-if": "^0.1.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-app": "^3.1.1",
    "debug": "^3.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eslint-config-airbnb-easy": "^1.0.10",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "^0.64.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "^22.1.4",
    "lint-staged": "^6.1.0",
    "pre-push": "^0.1.1",
    "prettier-eslint-cli": "^4.7.0",
    "react-styleguidist": "^6.0.33",
    "react-test-renderer": "15.6.1",
    "react-with-context": "1.2.1",
    "resolve": "^1.5.0",
    "webpack-dev-server": "^2.11.1"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(scss)$": "identity-obj-proxy",
      "^components(.*)$": "<rootDir>/src/components/$1",
      "^utils(.*)$": "<rootDir>/src/utils/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/g2-layout-demo"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jestSetup.js",
    "testRegex": "src/.*(jest|test).js$"
  },
  "pre-push": [
    "test",
    "flow"
  ],
  "lint-staged": {
    "src/**/*.{js,css,scss,json}": [
      "prettier-eslint --trailing-comma es5 --single-quote --eslint-config-path .eslintrc.js --no-semi --print-width 120 --write",
      "git add"
    ]
  }
}
